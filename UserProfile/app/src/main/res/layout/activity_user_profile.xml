<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mist.userprofile.UserProfile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_profile"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foregroundGravity="center"
        android:id="@+id/imageView"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selectInmage"
        android:text="Select Image"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20dp"
        android:layout_below="@+id/selectInmage"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:id="@+id/name" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/namee"
        android:layout_below="@+id/selectInmage"
        android:layout_alignRight="@+id/name"
        android:layout_alignLeft="@+id/univ"
        android:layout_alignStart="@+id/univ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University:"
        android:textSize="20dp"
        android:layout_below="@+id/name"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:id="@+id/uni" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:id="@+id/univ"
        android:layout_alignTop="@+id/uni"
        android:layout_alignRight="@+id/uni"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll:"
        android:textSize="20dp"
        android:layout_below="@+id/uni"

        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:id="@+id/roll" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:inputType="number"
        android:id="@+id/num"
        android:layout_below="@+id/roll"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/selectInmage"
        android:layout_alignStart="@+id/selectInmage" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/contact"
        android:text="Contact"
        android:layout_below="@+id/num"
        android:layout_toLeftOf="@+id/num"
        android:layout_toStartOf="@+id/num" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20dp"
        android:layout_below="@+id/contact"

        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:id="@+id/em" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:layout_alignBaseline="@+id/em"
        android:layout_alignBottom="@+id/em"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
